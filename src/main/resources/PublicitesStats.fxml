<AnchorPane prefHeight="650.0" prefWidth="1300.0" style="-fx-background-color: #0d1a40;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.cinema.controllers.PublicitesStats">
