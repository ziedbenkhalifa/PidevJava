        <Pane layoutX="215.0" layoutY="14.0" prefHeight="67.0" prefWidth="1076.0" style="-fx-background-color: #1a2b5f; -fx-background-radius: 30;">
            <children>
                <Label layoutX="41.0" layoutY="18.0" prefHeight="31.0" prefWidth="600.0" text="STATISTIQUES DES PUBLICITES" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </Pane>

        <!-- Sidebar -->
        <AnchorPane layoutY="-8.0" prefHeight="651.0" prefWidth="200.0" style="-fx-background-color: #021b50; -fx-background-radius: 10;">
            <children>
                <ImageView layoutX="12.0" layoutY="31.0">
                    <image>
                        <Image url="@images/icons8-user-64.png" />
                    </image>
                </ImageView>
                <Button fx:id="gestionUserButton" layoutX="56.0" layoutY="181.0" mnemonicParsing="false" onAction="#handleGestionUserAction" prefHeight="24.0" prefWidth="120.0" style="-fx-background-color: #3e2063;" text="Gestion User" textFill="#d7d7d9" />
                <Button fx:id="gestionFilmButton" layoutX="57.0" layoutY="235.0" mnemonicParsing="false" onAction="#gestionFilm" prefHeight="26.0" prefWidth="120.0" style="-fx-background-color: #3e2063;" text="Gestion Film" textFill="#d7d7d9" />
                <Button fx:id="gestionProduitButton" layoutX="57.0" layoutY="293.0" mnemonicParsing="false" onAction="#affichage" prefHeight="24.0" prefWidth="120.0" style="-fx-background-color: #3e2063;" text="Gestion Produit" textFill="#d7d7d9" />
                <Button fx:id="gestionPubButton" layoutX="57.0" layoutY="346.0" mnemonicParsing="false" onAction="#goToInterfaceChoixGP" prefHeight="24.0" prefWidth="120.0" style="-fx-background-color: #3e2063;" text="Gestion Pub" textFill="#d7d7d9" />
                <Button fx:id="publicitesStatsButton" layoutX="57.0" layoutY="399.0" mnemonicParsing="false" onAction="#goToPublicitesStats" prefHeight="24.0" prefWidth="120.0" style="-fx-background-color: #4CAF50;" text="Publicités Stats" textFill="#d7d7d9" />
                <Button fx:id="gestionCourButton" layoutX="57.0" layoutY="452.0" mnemonicParsing="false" onAction="#handleGestinCour" prefHeight="24.0" prefWidth="120.0" style="-fx-background-color: #3e2063;" text="Gestion Cour" textFill="#d7d7d9" />
                <Button fx:id="btnAjouterEquipement" layoutX="55.0" layoutY="505.0" mnemonicParsing="false" onAction="#ouvrirInterfaceAjout" prefHeight="24.0" prefWidth="120.0" style="-fx-background-color: #3e2063;" text="Gestion Salle" textFill="#d7d7d9" />
                <Button fx:id="monCompteButton" layoutX="74.0" layoutY="31.0" mnemonicParsing="false" onAction="#handleMonCompteAction" prefHeight="64.0" prefWidth="126.0" style="-fx-background-color: #021b50;" text="Mon Compte" textFill="#d7d7d9">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>

        <!-- Main Content -->
        <ScrollPane fitToWidth="true" layoutX="215.0" layoutY="89.0" prefHeight="554.0" prefWidth="1068.0" style="-fx-background: #0d1a40; -fx-background-color: transparent;">
            <content>
                <AnchorPane prefHeight="554.0" prefWidth="1068.0" style="-fx-background-color: transparent;">
                    <children>
                        <ImageView fitHeight="554.0" fitWidth="1068.0" opacity="0.05">
                            <image>
                                <Image url="@images/cinemaback.jpg" />
                            </image>
                        </ImageView>

                        <VBox fx:id="statsContainer" layoutX="20.0" layoutY="20.0" prefHeight="514.0" prefWidth="1028.0" spacing="20.0">
                            <children>
                                <!-- Calendar Section -->
                                <AnchorPane prefHeight="300.0" prefWidth="1028.0" style="-fx-background-color: #1a2b5f; -fx-background-radius: 10;">
                                    <children>
                                        <Label layoutX="20.0" layoutY="10.0" text="Calendrier des Publicités" textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="18.0" />
                                            </font>
                                        </Label>
                                        <HBox layoutX="20.0" layoutY="40.0" spacing="10.0">
                                            <children>
                                                <Button fx:id="prevMonthButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 5;" text="&lt;" />
                                                <Label fx:id="monthYearLabel" prefWidth="200.0" style="-fx-text-fill: white; -fx-font-size: 16; -fx-alignment: center;" text="avril 2025" />
                                                <Button fx:id="nextMonthButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 5;" text="&gt;" />
                                                <Button fx:id="todayButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 5;" text="Aujourd'hui" />
                                            </children>
                                        </HBox>
                                        <GridPane fx:id="calendarGrid" hgap="5.0" layoutX="20.0" layoutY="80.0" prefHeight="200.0" prefWidth="988.0" style="-fx-background-color: #0d1a40; -fx-background-radius: 5;" vgap="5.0">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="ALWAYS" />
                                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="ALWAYS" />
                                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="ALWAYS" />
                                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="ALWAYS" />
                                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="ALWAYS" />
                                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="ALWAYS" />
                                            </rowConstraints>
                                            <children>
                                                <Label style="-fx-font-weight: bold; -fx-text-fill: white; -fx-alignment: center;" text="Dimanche" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                                <Label style="-fx-font-weight: bold; -fx-text-fill: white; -fx-alignment: center;" text="Lundi" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                                <Label style="-fx-font-weight: bold; -fx-text-fill: white; -fx-alignment: center;" text="Mardi" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                                                <Label style="-fx-font-weight: bold; -fx-text-fill: white; -fx-alignment: center;" text="Mercredi" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                                                <Label style="-fx-font-weight: bold; -fx-text-fill: white; -fx-alignment: center;" text="Jeudi" GridPane.columnIndex="4" GridPane.rowIndex="0" />
                                                <Label style="-fx-font-weight: bold; -fx-text-fill: white; -fx-alignment: center;" text="Vendredi" GridPane.columnIndex="5" GridPane.rowIndex="0" />
                                                <Label style="-fx-font-weight: bold; -fx-text-fill: white; -fx-alignment: center;" text="Samedi" GridPane.columnIndex="6" GridPane.rowIndex="0" />
                                            </children>
                                        </GridPane>
                                    </children>
                                </AnchorPane>

                                <!-- Revenue Chart Section -->
                                <AnchorPane prefHeight="300.0" prefWidth="1028.0" style="-fx-background-color: #1a2b5f; -fx-background-radius: 10;">
                                    <children>
                                        <Label layoutX="20.0" layoutY="10.0" text="Évolution des Revenus Publicitaires" textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="18.0" />
                                            </font>
                                        </Label>
                                        <LineChart fx:id="revenueChart" layoutX="10.0" layoutY="40.0" prefHeight="250.0" prefWidth="1008.0" style="-fx-background-color: transparent;" title="Revenus par Année (TND)">
                                            <xAxis>
                                                <NumberAxis side="BOTTOM" label="Année" tickLabelFill="WHITE" />
                                            </xAxis>
                                            <yAxis>
                                                <NumberAxis side="LEFT" label="Revenus (TND)" tickLabelFill="WHITE" />
                                            </yAxis>
                                        </LineChart>
                                    </children>
                                </AnchorPane>

                                <!-- Yearly Revenue Table -->
                                <AnchorPane prefHeight="200.0" prefWidth="1028.0" style="-fx-background-color: #1a2b5f; -fx-background-radius: 10;">
                                    <children>
                                        <Label layoutX="20.0" layoutY="10.0" text="Revenus par Année" textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="18.0" />
                                            </font>
                                        </Label>
                                        <TableView fx:id="yearlyRevenueTable" layoutX="10.0" layoutY="40.0" prefHeight="150.0" prefWidth="1008.0" style="-fx-background-color: #0d1a40;">
                                            <columns>
                                                <TableColumn fx:id="yearColumn" prefWidth="504.0" style="-fx-background-color: #4CAF50;" text="Année" />
                                                <TableColumn fx:id="revenueColumn" prefWidth="504.0" style="-fx-background-color: #4CAF50;" text="Revenus (TND)" />
                                            </columns>
                                        </TableView>
                                    </children>
                                </AnchorPane>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>