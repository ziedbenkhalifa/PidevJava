<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #1e3a5f;" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.cinema.controllers.ResetPassword">
    <children>
        <!-- Titre -->
        <Label layoutX="100.0" layoutY="30.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Set New Password" textFill="white" />

        <!-- Champ Nouveau Mot de Passe -->
        <Label layoutX="21.0" layoutY="85.0" style="-fx-font-size: 16px;" text="New Password:" textFill="white" />
        <PasswordField fx:id="newPasswordField" layoutX="150.0" layoutY="85.0" prefWidth="200.0" style="-fx-background-color: #2a4e7a; -fx-text-fill: white;" />

        <!-- Champ Confirmer Mot de Passe -->
        <Label layoutX="14.0" layoutY="137.0" style="-fx-font-size: 16px;" text="Confirm Password:" textFill="white" />
        <PasswordField fx:id="confirmPasswordField" layoutX="150.0" layoutY="135.0" prefWidth="200.0" style="-fx-background-color: #2a4e7a; -fx-text-fill: white;" />

        <!-- Bouton Update Password -->
        <Button fx:id="updatePasswordButton" layoutX="150.0" layoutY="190.0" onAction="#handleUpdatePasswordAction" prefWidth="120.0" style="-fx-background-color: #FF9800; -fx-text-fill: white;" text="Update Password" />
    </children>
</AnchorPane>
