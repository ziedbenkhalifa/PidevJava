<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Circle?>

<VBox prefHeight="500.0" prefWidth="360.0" spacing="12.0"
      style="-fx-background-color: linear-gradient(to bottom right, #ffffff, #f0f5ff);
             -fx-background-radius: 18;
             -fx-border-color: rgba(197, 202, 233, 0.7);
             -fx-border-radius: 18;
             -fx-border-width: 0.8;"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.cinema.Controllers.Notification">

    <effect>
        <DropShadow radius="15.0" spread="0.08">
            <color>
                <Color opacity="0.35" />
            </color>
        </DropShadow>
    </effect>

    <padding>
        <Insets bottom="18.0" left="18.0" right="18.0" top="18.0"/>
    </padding>

    <children>
        <!-- Header section -->
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Circle radius="16" fill="#3f51b5">
                    <effect>
                        <DropShadow radius="5.0" spread="0.05" color="#0000004D" />
                    </effect>
                </Circle>

                <Label text="Notifications"
                       style="-fx-font-size: 22px;
                              -fx-font-weight: bold;
                              -fx-text-fill: #303f9f;">
                    <font>
                        <Font name="System Bold" size="22.0"/>
                    </font>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <Label fx:id="notificationCount" text="3 nouvelles"
                       style="-fx-font-size: 14px;
                              -fx-text-fill: #7986cb;
                              -fx-background-color: #e8eaf6;
                              -fx-background-radius: 12;
                              -fx-padding: 3 10 3 10;"/>
            </children>
        </HBox>

        <Separator style="-fx-background-color: #e0e0e0;" />

        <!-- Filter options -->
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <children>
                <Button text="Toutes"
                        style="-fx-background-color: #3f51b5;
                               -fx-background-radius: 15;
                               -fx-text-fill: white;
                               -fx-cursor: hand;"
                        prefWidth="80.0"/>

                <Button text="Non lues"
                        style="-fx-background-color: #e8eaf6;
                               -fx-background-radius: 15;
                               -fx-text-fill: #3f51b5;
                               -fx-cursor: hand;"
                        prefWidth="80.0"/>

                <Region HBox.hgrow="ALWAYS" />

                <Button fx:id="btnRefresh"
                        style="-fx-background-color: transparent;
                               -fx-cursor: hand;">
                    <graphic>
                        <Circle radius="10" fill="#e8eaf6" />
                    </graphic>
                </Button>
            </children>
            <padding>
                <Insets top="5.0" bottom="5.0"/>
            </padding>
        </HBox>

        <!-- Notifications list -->
        <ListView fx:id="notificationListView"
                  prefHeight="340.0"
                  style="-fx-background-color: transparent;
                         -fx-control-inner-background: rgba(255, 255, 255, 0.8);
                         -fx-border-color: #e0e0e0;
                         -fx-border-radius: 12;
                         -fx-border-width: 0.5;
                         -fx-padding: 8;">
            <effect>
                <DropShadow radius="4.0" spread="0.01" color="#0000001A" />
            </effect>
        </ListView>

        <!-- Footer with buttons -->
        <HBox alignment="CENTER" spacing="12.0">
            <children>
                <Button fx:id="btnMarkAllRead" text="Tout marquer comme lu"
                        style="-fx-background-color: #7986cb;
                               -fx-background-radius: 20;
                               -fx-font-size: 13px;
                               -fx-text-fill: white;
                               -fx-cursor: hand;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 3, 0, 0, 1);"

                        prefWidth="160.0"/>

                <Button fx:id="btnClose" text="Fermer"
                        style="-fx-background-color: linear-gradient(to right, #e74c3c, #c0392b);
                               -fx-background-radius: 20;
                               -fx-font-size:.13px;
                               -fx-text-fill: white;
                               -fx-cursor: hand;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 3, 0, 0, 1);"
                        onAction="#closeWindow"
                        prefWidth="120.0"/>
            </children>
            <padding>
                <Insets top="8.0" />
            </padding>
        </HBox>
    </children>
</VBox>