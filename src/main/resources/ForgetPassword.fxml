<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="350.0" prefWidth="400.0" style="-fx-background-color: #1e3a5f;" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.cinema.controllers.ForgetPassword">
    <children>
        <!-- Titre -->
        <Label layoutX="100.0" layoutY="30.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Reset Password" textFill="white" />

        <!-- Champ Email -->
        <Label layoutX="50.0" layoutY="90.0" style="-fx-font-size: 16px;" text="Email:" textFill="white" />
        <TextField fx:id="emailField" layoutX="120.0" layoutY="85.0" prefWidth="200.0" style="-fx-background-color: #2a4e7a; -fx-text-fill: white;" />

        <!-- Bouton Send Reset Code -->
        <Button fx:id="sendResetCodeButton" layoutX="120.0" layoutY="140.0" onAction="#handleSendResetCodeAction" prefWidth="120.0" style="-fx-background-color: #FF9800; -fx-text-fill: white;" text="Send Reset Code" />

        <!-- Champ Code -->
        <Label layoutX="29.0" layoutY="185.0" style="-fx-font-size: 16px;" text="Reset Code:" textFill="white" />
        <TextField fx:id="codeField" layoutX="120.0" layoutY="185.0" prefWidth="200.0" style="-fx-background-color: #2a4e7a; -fx-text-fill: white;" />

        <!-- Bouton Verify Code -->
        <Button fx:id="verifyCodeButton" layoutX="120.0" layoutY="240.0" onAction="#handleVerifyCodeAction" prefWidth="120.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Verify Code" />

        <!-- Bouton Retour -->
        <Button fx:id="backButton" layoutX="250.0" layoutY="240.0" onAction="#handleBackAction" prefWidth="70.0" style="-fx-background-color: #757575; -fx-text-fill: white;" text="Back" />
    </children>
</AnchorPane>
